{
    "dataset": {
        "repo_id": "ralfroemer/pick_lego_block"
    },
    "policy": {
        "type": "smolvla",
        "scheduler_warmup_steps": 100,
        "input_features": {
            "observation.images.right_wrist_camera": {
                "type": "VISUAL",
                "shape": [
                    3,
                    256,
                    256
                ]
            },
            "observation.images.right_third_person_camera": {
                "type": "VISUAL",
                "shape": [
                    3,
                    256,
                    256
                ]
            },
            "observation.state": {
                "type": "STATE",
                "shape": [
                    7
                ]
            }
        },
        "output_features": {
            "action": {
                "type": "ACTION",
                "shape": [
                    7
                ]
            }
        }
    },
    "scheduler": {
        "type": "cosine_decay_with_warmup",
        "num_warmup_steps": 200,
        "num_decay_steps": 10000,
        "peak_lr": 0.0001,
        "decay_lr": 2.5e-06
    },
    "steps": 5000,
    "eval_freq": 500,
    "log_freq": 100,
    "save_checkpoint": true,
    "save_freq": 1000,
    "num_workers": 4,
    "batch_size": 32
}